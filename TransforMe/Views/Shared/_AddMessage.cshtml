@model TransforMe.ViewModels.MessageViewModel

<form asp-action="AddMessage" class="text-break text-center messageform" style="background-color: rgba(213,65,65,0);">
    <strong>Post a message</strong>
    <div class="form-group"><textarea asp-for="Text" class="border rounded-0 shadow-sm form-control" name="message" placeholder="Say something..." rows="14" style="height: 100px;"></textarea></div>
    <div class="form-group text-right" style="margin-top: -2px;"><button class="btn btn-primary" type="submit">Post</button></div>
</form>